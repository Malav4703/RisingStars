@model LoginViewModel


<style>

    .login-page-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        justify-items: center;
        align-content: center;
        align-items: center;
    }

    .login-form {
        padding: 20px;
    }

    .login-hero-image {
        margin: 0 auto; /* Center align the image */
        max-width: 100%; /* Make image responsive */
        border-radius: 8px; /* Soften the edges */
        max-height: 100%; /* Make image responsive */
        object-fit: cover; /* Cover the entire div */

    }

    .login-content {
        max-width: 600px;
        display: flex;
        margin: 0 auto;
        padding: 30px;
        flex-direction: column;
        justify-content: center;
    }

</style>

<div class="row justify-content-center align-items-center login-page-container">
    <div class="row login-form">

        <div class="col">
            <img src="~/images/login-background-image.jpg" alt="Hero Image" class="img-fluid rounded" />
        </div>

        <div class="bg-light col-md-4 rounded login-content">
            <img src="~/images/RisingStarLogo.png" alt="Rising Stars Logo" class="img-fluid col-md-2 text-center" />
            <h2>Welcome to Rising Stars!</h2>
            <span class="text-muted mb-3">
                Please login to continue. We are excited to have you on board!
            </span>
            <form class="form-horizontal" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label class="control-label" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe"></label>
                    </div>
                </div>

                <span class="text-muted">
                    Don't have an account? <a asp-action="Register" class="text-decoration-none">Register</a>
                </span>

                <div class="form-group mt-2">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>
